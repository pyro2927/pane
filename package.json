{
  "name": "family-pane",
  "version": "1.0.0",
  "description": "A family hallway display pane for Raspberry Pi with touch screen support",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "setup:verify": "node scripts/verify-setup.js",
    "setup:install": "nvm use && npm install && npm run setup:verify",
    "setup:env": "cp .env.example .env && echo 'Please configure .env file with your settings'"
  },
  "keywords": ["family", "display", "raspberry-pi", "touch-screen", "google-calendar", "google-photos"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.6",
    "googleapis": "^131.0.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "local-devices": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8",
    "jest-environment-node": "^29.7.0"
  },
  "engines": {
    "node": "18.19.0",
    "npm": ">=9.0.0"
  }
}