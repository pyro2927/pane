# Family Pane Environment Configuration
# Copy this file to .env and configure with your actual values

# Application
NODE_ENV=development
PORT=8080
HOST=localhost

# Google OAuth 2.0 Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/google/callback

# Google APIs Scopes (do not modify unless you know what you're doing)
GOOGLE_SCOPES=https://www.googleapis.com/auth/calendar.readonly,https://www.googleapis.com/auth/photoslibrary.readonly

# Session Configuration
SESSION_SECRET=your_session_secret_here_change_in_production

# Database Configuration
DATABASE_PATH=./config/pane.db
DATABASE_BACKUP_INTERVAL=3600000

# Display Configuration
DEFAULT_VIEW=dashboard
DISPLAY_REFRESH_INTERVAL=30000
DISPLAY_TIMEZONE=America/New_York
PHOTO_ROTATION_INTERVAL=30000
CALENDAR_REFRESH_INTERVAL=300000

# Family Configuration
DEFAULT_FAMILY_NAME=My Family
MAX_FAMILY_MEMBERS=10
MAX_CHORES_PER_PERSON=50

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/pane.log

# Network Configuration
DISCOVERY_PORT=3001
ADMIN_PORT=3002
NETWORK_SCAN_INTERVAL=300000
ALLOW_MOBILE_CONFIG=true

# Photo Display Configuration
PHOTO_ALBUM_ID=your_google_photos_album_id_here
PHOTO_REFRESH_INTERVAL=60000
PHOTO_SLIDESHOW_DURATION=10000